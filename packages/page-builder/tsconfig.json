{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "paths": {
      "pages/*": ["pages/*"],
      "helpers/*": ["helpers/*"],
      "components/*": ["components/*"]
    },
    "jsx": "preserve",
    "lib": ["dom", "es2017"],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "preserveConstEnums": true,
    "removeComments": false,
    "skipLibCheck": true,
    "skipDefaultLibCheck": false,
    "sourceMap": true,
    "strict": true,
    "target": "esnext"
  }
}
